<?xml version="1.0" encoding="UTF-8" ?>
<feed xmlns="http://www.w3.org/2005/Atom">
	<title type="text">{{config.site.title}}</title>
	<subtitle type="text">{{config.site.description}}</subtitle>
	<updated>{{updated|date("Y-m-d\\TH:i:sP")}}</updated>
	<id>http://{{system.base}}/atom</id>
	<link rel="self" type="application/atom+xml" href="{{system.base}}/atom" />
	<rights>presented by {{config.site.author}} under CC0.</rights>
	<generator>Necorandum {{system.version}}</generator>
	{% for article in articles %}
	<entry>
		<title>{{article.title|e}}</title>
		<link rel="alternate" href="{{article.permalink}}" />
		<id>{{article.permalink}}</id>
		<updated>{{article.updated_at|date("Y-m-d\\TH:i:sP")}}</updated>
		<published>{{article.created_at|date("Y-m-d\\TH:i:sP")}}</published>
		<author>
			<name>{{config.site.author}}</name>
		</author>
		<content type="xhtml" xml:lang="ja" xml:base="http://{{system.base}}/">
			<div xmlns="http://www.w3.org/1999/xhtml">
				{{article.text|atom|raw}}
			</div>
		</content>
	</entry>
	{% endfor %}
</feed>
