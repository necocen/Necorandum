<!DOCTYPE html>
<html lang="ja">
	<head>
		<meta charset="UTF-8">
		<meta name="ROBOTS" content="INDEX, FOLLOW">
		<meta name="generator" content="Necorandum {{system.version}}">
		<meta name="description" content="{{config.site.description}}">
		<meta name="author" content="{{config.site.author}}">
		<meta name="reply-to" content="{{config.site.email}}">
		<base href="http://{{system.base}}/">
		<link rel="stylesheet" href="./css/main.css" type="text/css" media="screen">
		<link rel="stylesheet" href="http://yandex.st/highlightjs/8.0/styles/{{config.site.highlight_theme}}.min.css" media="screen">
		<script src="http://yandex.st/highlightjs/8.0/highlight.min.js"></script>
		<script>
//<![CDATA[
	hljs.configure({tabReplace: "    "});
	hljs.initHighlightingOnLoad();
//]]></script>
{% if admin %}
		<script type="text/javascript" src="./zepto.min.js"></script>
		<script type="text/javascript" src="./taboverride.min.js"></script>
		<script>
//<![CDATA[
	$(document).ready(function() {
		tabOverride.set($("textarea"));
		tabOverride.autoIndent(true);
	});
//]]></script>
{% endif %}
		<script type="text/javascript" src="./main.js"></script>
{% if embed_ga %}
		<script type="text/javascript">
//<![CDATA[
	var _gaq = _gaq || [];
	_gaq.push(['_setAccount', '{{config.site.ga_code}}']);
	_gaq.push(['_trackPageview']);
	
	(function() {
		var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
		ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
		var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
	})();
//]]></script>
{% endif %}
		<title>{% block title %}{{config.site.title|e}}{% endblock %}</title>
	</head>
	<body>
		<div id="container">
			<header>
				<div id="title">
					<h1>{{config.site.title|e}}</h1>
				</div>
				<div id="menu">
					{% include "tags.twig" with {tags: tags} %}
				</div>
			</header>
			<hr>
			<div id="main">
				{% block contents %}
				<div>
					{% for article in articles %}
						{% include "article.twig" with {article: article} %}
						{% if not loop.last %}
					<hr>
						{% endif %}
					{% endfor %}
				</div>
				{% endblock %}
			</div>
			<hr>
			<footer>
				<div>
					<address>presented by {{config.site.author|e}} under CC0.</address>
				</div>
			</footer>
		</div>
	</body>
</html>
