<article>
	<header>
		<h1>{{article.title|e}}</h1>
	</header>
	<aside class="timestamps">
		<time class="posted-at">{{article.created_at|date}}</time>
	</aside>
	<aside class="tags">
	{% if article.tags is not empty %}
	{% include "tags.twig" with {tags: article.tags} %}
	{% endif %}
	</aside>
	{{article.text|markdown|raw}}
</article>
