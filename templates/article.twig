<article>
	<header>
		{% if preview is not defined %}
		<h1><a href="./{{article.id}}" title="{{article.title|e}}">{{article.title|e}}</a></h1>
		{% else %}
		<h1>{{article.title|e}}</h1>
		{% endif %}
	</header>
	<aside class="timestamps">
		<time class="posted-at">{{article.updated_at|date}}</time>
	</aside>
	<aside class="tags">
	{% if article.tags is not empty and preview is not defined %}
	{% include "tags.twig" with {tags: article.tags} %}
	{% elseif tags is not empty and preview is defined %}
	<ul class="tags">
	{% for tag in tags %}
		<li>{{tag|e}}</li>
	{% endfor %}
	</ul>
	{% endif %}
	</aside>
	{{article.text|markdown|raw}}
</article>
